{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2016",
    "module": "es2020",
    "types": [
      "vite/client"
    ],
    "include": [
      "src/vite-env.d.ts"
    ],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
